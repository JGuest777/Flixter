<br />

<div class="booyah-box col-10 offset-1">
  <h1 id="dash">What I'm Learning</h1>
    <% current_user.enrolled_courses.each do |course| %>
      <div class="soft-box">
        <h2 class="text-center">
          "<%= course.title %>"
        </h2>
        <br />
        <div class="text-center">
          <% if course.image.present? %>
            <%= image_tag course.image.to_s, class: 'img-fluid' %>
          <% else %>
            <%= image_tag 'placeholder.jpg', class: 'img-fluid' %>
          <% end %>
        </div>
        <br />
        <br />
        <h4 class="text-center">
          <%= course.description %>
        </h4>
        <br />
        <div class="text-center">
          <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
        </div>
      </div>
      <hr class="col-8 offset-2">
    <% end %>

        <br class="clr" />

  <% if current_user.enrolled_courses.blank? %>
    <br />
      <h3 class="text-center">
        <%= 'You are currently not learning anything!' %>
        <br />
        <br />
          :(
      </h3>
    <br />
  <% end %>

  <h1 id="dash">What I'm Teaching</h1>
    <% current_user.courses.each do |course| %>
      <div class="soft-box">
        <h2 class="text-center">
          "<%= course.title %>"
        </h2>
        <br />
        <div class="text-center">
          <% if course.image.present? %>
            <%= image_tag course.image.to_s, class: 'img-fluid' %>
          <% else %>
            <%= image_tag 'placeholder.jpg', class: 'img-fluid' %>
          <% end %>
        </div>
        <br />
        <br />
        <h4 class="text-center">
          <%= course.description %>
        </h4>
        <br />  
        <div class="text-center">
        <br />
          <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
        </div>
      </div>
      <hr class="col-8 offset-2">
    <% end %>

        <br class="clr" />

  <% if current_user.courses.blank? %>
    <br />
      <h3 class="text-center">
      <%= 'You are currently not teaching anything!' %>
      <br />
      <br />
        :(
      </h3>
    <br />
  <% end %>
</div>