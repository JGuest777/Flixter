<br />

<div class="booyah-box col-10 offset-1">
  <h1><%= current_course.title %></h1>
  <%= image_tag current_course.image.to_s, class: 'img-fluid' %>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-default">
        <%= number_to_currency current_course.cost %>
      </span>

      <% if current_user && current_user == current_course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(current_course), class: 'btn btn-danger btn-large' %>
      <% end %>
    </div>

    <div class="col-sm-8 col-12">
      <%= current_course.description %>
    </div>
  </div>

    <div class="col-12">
      <% current_course.sections.each do |section| %>
        <br /><br />
        <div class="section">
          <h3>
            <%= section.title %>
          </h3>
          <div class="row">
            <% section.lessons.each do |lesson| %>
              <div class="col-12 col-sm-6">
                <div class="lesson text-center">
                  <br />
                  <%= link_to lesson_path(lesson) do %>
                    <b><%= lesson.title %></b>
                    <br />
                    <%= lesson.subtitle %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <br class="clr" />
        </div>
      <% end %>
    </div>
</div>