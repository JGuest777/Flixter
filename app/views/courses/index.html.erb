<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Browse Available Courses</h1>
  <hr />

  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-12 col-sm-5 offset-1", style="margin-left:auto; margin-right:auto;">
        <div class="soft-box">
          <div class="col-12 text-center">
            <h2>
              <%= link_to course.title, course_path(course) %>
            </h2>		
          </div>	
          <div class="row">
            <% if course.image.present? %>
              <%= image_tag course.image.url, class: 'img-fluid' %>
            <% else %>
              <%= image_tag 'placeholder.jpg', class: 'img-fluid' %>
            <% end %>
            <div class="col-10 offset-1 text-center">
              <br />
              <h5 class="scrip"><%= course.description %></h5>
            </div>
        </div>
      </div>
        <div class="text-center">
        <br />
          <%= link_to 'Learn More', course_path(course), class:'btn btn-primary btn-lg' %>
        </div>
    <br />
  </div>
	<% end %>
</div>